{
    "extends": [
        "eslint:recommended",
        "plugin:mdx/recommended",
        "plugin:prettier/recommended",
        "next",
        "next/core-web-vitals"
    ],
    "settings": {
        "mdx/code-blocks": true,
        "mdx/language-mapper": {}
    },
    "plugins": ["prettier"],
    "rules": {
        "no-unused-vars": "warn",
        "prettier/prettier": "error"
    },
    "ignorePatterns": ["src/components/ui"],
    "globals": {
        "Promise": "readonly",
        "Set": "readonly"
    }
}
